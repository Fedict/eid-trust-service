<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>package</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/files/javadoc</directory>
			<outputDirectory>/javadoc</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/files/sources</directory>
			<outputDirectory>/sources</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/dependencies</directory>
			<outputDirectory>/lib</outputDirectory>
			<excludes>
				<exclude>eid-trust-service-client*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/dependencies</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>eid-trust-service-client*</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/files/eid-trust-service-devel-guide.pdf</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>target/files/eid-trust-service-architecture-guide.pdf</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>src/main/files/README.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>
