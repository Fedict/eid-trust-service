<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>FedICT eID Trust Service Project</name>
	<parent>
		<!--
			We want to limit duplicate work, so we reuse the eID Applet parent
			POM. The eID Applet project also holds our JBoss AS runtime
			configuration anyway.
		-->
		<groupId>be.fedict</groupId>
		<artifactId>eid-applet</artifactId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>
	<groupId>be.fedict</groupId>
	<artifactId>eid-trust-service</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<inceptionYear>2009</inceptionYear>
	<scm>
		<developerConnection>scm:svn:https://eid-trust-service.googlecode.com/svn/trunk
		</developerConnection>
	</scm>
	<modules>
		<module>eid-trust-service-service</module>
		<module>eid-trust-service-xkms2-ws</module>
		<module>eid-trust-service-xkms2-ws-impl</module>
		<module>eid-trust-service-ws</module>
		<module>eid-trust-service-model</module>
		<module>eid-trust-service-portal-model</module>
		<module>eid-trust-service-portal-webapp</module>
		<module>eid-trust-service-admin-portal-model</module>
		<module>eid-trust-service-admin-portal-webapp</module>
		<module>eid-trust-service-deploy</module>
		<module>eid-trust-service-client</module>
		<module>eid-trust-service-startup-runtime</module>
	</modules>
	<profiles>
		<profile>
			<id>tests</id>
			<activation>
				<property>
					<name>env</name>
					<value>tests</value>
				</property>
			</activation>
			<modules>
				<module>eid-trust-service-tests</module>
			</modules>
		</profile>
	</profiles>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>be.fedict</groupId>
				<artifactId>jtrust</artifactId>
				<version>1.1.0-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>be.fedict.eid-applet</groupId>
				<artifactId>eid-applet-package</artifactId>
				<version>${eid-applet.version}</version>
			</dependency>
			<dependency>
				<groupId>be.fedict.eid-applet</groupId>
				<artifactId>eid-applet-service</artifactId>
				<version>${eid-applet.version}</version>
			</dependency>
			<dependency>
				<groupId>be.fedict.eid-applet</groupId>
				<artifactId>eid-applet-service-spi</artifactId>
				<version>${eid-applet.version}</version>
			</dependency>
			<dependency>
				<groupId>quartz</groupId>
				<artifactId>quartz</artifactId>
				<version>1.5.2</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<properties>
		<eid-applet.version>1.0.1-SNAPSHOT</eid-applet.version>
	</properties>
</project>
