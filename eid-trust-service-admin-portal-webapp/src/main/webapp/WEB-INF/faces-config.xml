<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
              version="1.2">
    <!-- Facelets configuration -->
    <application>
        <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
    </application>

    <lifecycle>
        <phase-listener>
            be.fedict.trust.admin.listener.CacheControlPhaseListener
        </phase-listener>
        <phase-listener>
            be.fedict.trust.admin.listener.SessionTimeoutPhaseListener
        </phase-listener>
    </lifecycle>

    <!-- Configuration page navigation rules -->
    <navigation-rule>
        <from-view-id>/admin/configuration.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/configuration.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/admin/localization.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/localization.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/configuration.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>cancel</from-outcome>
            <to-view-id>/admin/configuration.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- END Configuration pages navigation rules -->

    <!--  Virtual Trust domain navigation rules -->
    <navigation-rule>
        <from-view-id>/admin/virtual-trust-domain.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>modify</from-outcome>
            <to-view-id>/admin/virtual-trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/virtual-trust-domain.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/virtual-trust-domain-edit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/admin/virtual-trust-domain.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>view</from-outcome>
            <to-view-id>/admin/trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>select</from-outcome>
            <to-view-id>/admin/trust-domain-select.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/virtual-trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/trust-domain-select.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/admin/virtual-trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/virtual-trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- END Virtual Trust domain navigation rules -->

    <!--  Trust domain navigation rules -->
    <navigation-rule>
        <from-view-id>/admin/trust-domain.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>modify</from-outcome>
            <to-view-id>/admin/trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/trust-domain.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/trust-domain-edit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>save</from-outcome>
            <to-view-id>/admin/trust-domain.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>view</from-outcome>
            <to-view-id>/admin/trust-point-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/admin/trust-domain.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>select</from-outcome>
            <to-view-id>/admin/trust-point-select.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/trust-point-edit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/admin/trust-point.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>back_trustdomain</from-outcome>
            <to-view-id>/admin/trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/trust-point.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>refresh</from-outcome>
            <to-view-id>/admin/trust-point-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success_trustdomain</from-outcome>
            <to-view-id>/admin/trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/trust-point.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>modify</from-outcome>
            <to-view-id>/admin/trust-point-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/trust-point.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/trust-point-select.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/admin/trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/trust-domain-edit.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!--  END Trust Domain navigation rules -->

	<!-- CRL Cache navigation rules -->
	<navigation-rule>
		<from-view-id>/admin/crl-cache.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/admin/crl-cache.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

    <!-- Audit page navigation rules -->
    <navigation-rule>
        <from-view-id>/admin/audit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/audit.seam</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- END Audit pages navigation rules -->

</faces-config>