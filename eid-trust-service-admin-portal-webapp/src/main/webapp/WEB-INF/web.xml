<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Facelets -->
    <context-param>
        <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
        <param-value>.xhtml</param-value>
    </context-param>
    <context-param>
        <param-name>facelets.DEVELOPMENT</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- JBoss Richfaces -->
    <context-param>
        <param-name>org.richfaces.SKIN</param-name>
        <param-value>DEFAULT</param-value>
    </context-param>
    <context-param>
        <param-name>org.ajax4jsf.VIEW_HANDLERS</param-name>
        <param-value>com.sun.facelets.FaceletViewHandler</param-value>
    </context-param>

    <!-- JAAS Login -->
    <filter>
        <filter-name>JAASLoginFilter</filter-name>
        <filter-class>be.fedict.trust.admin.filter.JAASLoginFilter</filter-class>
        <init-param>
            <param-name>LoginPath</param-name>
            <param-value>/login.seam</param-value>
        </init-param>
        <init-param>
            <param-name>MainPath</param-name>
            <param-value>/main.seam</param-value>
        </init-param>
        <init-param>
            <param-name>RegisterPath</param-name>
            <param-value>/register-pending.seam</param-value>
        </init-param>
    </filter>

    <!-- Seam Filter -->
    <filter>
        <filter-name>Seam Filter</filter-name>
        <filter-class>org.jboss.seam.servlet.SeamFilter</filter-class>
        <!-- Following is for the richfaces upload component -->
        <init-param>
            <param-name>createTempFiles</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>maxRequestSize</param-name>
            <param-value>200000</param-value>
        </init-param>
    </filter>

    <!-- Filter mappings -->
    <filter-mapping>
        <filter-name>JAASLoginFilter</filter-name>
        <url-pattern>*.seam</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Seam Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- JSF listener -->
    <listener>
        <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
    </listener>

    <!-- JBoss Seam listener -->
    <listener>
        <listener-class>org.jboss.seam.servlet.SeamListener</listener-class>
    </listener>

    <!-- Logout -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>be.fedict.trust.admin.servlet.LogoutServlet</servlet-class>
        <init-param>
            <param-name>MainPath</param-name>
            <param-value>/main.seam</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Seam Resource Servlet</servlet-name>
        <servlet-class>org.jboss.seam.servlet.SeamResourceServlet</servlet-class>
    </servlet>

    <!-- JSF -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- eID Applet -->
    <servlet>
        <servlet-name>AppletServiceServlet</servlet-name>
        <servlet-class>be.fedict.eid.applet.service.AppletServiceServlet</servlet-class>
        <init-param>
            <param-name>AuthenticationService</param-name>
            <param-value>TrustService/AdminAuthorizationServiceBean</param-value>
        </init-param>
        <init-param>
            <param-name>IncludeCertificates</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>PreLogoff</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>SkipSecureConnectionCheck</param-name>
            <param-value>${eid-applet.SkipSecureConnectionCheck}</param-value>
        </init-param>
    </servlet>

    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.seam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Seam Resource Servlet</servlet-name>
        <url-pattern>/seam/resource/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AppletServiceServlet</servlet-name>
        <url-pattern>/applet-service</url-pattern>
    </servlet-mapping>
</web-app>